{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\Common7\\Tools\\VsDevCmd.bat",
      "args": [
        "&&",
        "cl.exe",
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe:",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build c.cpp",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=gnu++17",
        "-g",
        "${workspaceFolder}/c.cpp",
        "-o",
        "c.exe"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    {
      "type": "cppbuild",
      "label": "C/C++: g++ build current file",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=gnu++17",
        "-g",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
